{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [ "ES2016" ],
		"module": "CommonJS",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": [ "core/**/*" ]
}
