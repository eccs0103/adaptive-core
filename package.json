{
	"name": "adaptive-extender",
	"version": "0.2.7",
	"description": "Adaptive library for JS/TS development environments",
	"type": "module",
	"exports": {
		"./core": {
			"import": "./dist/core/index.js",
			"types": "./dist/core/index.d.ts"
		},
		"./dom": {
			"import": "./dist/dom/index.js",
			"types": "./dist/dom/index.d.ts"
		},
		"./node": {
			"import": "./dist/node/index.js",
			"types": "./dist/node/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eccs0103/adaptive-extender.git"
	},
	"keywords": [ "javascript", "typescript", "extensions", "core", "dom", "node" ],
	"author": "eccs0103",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/eccs0103/adaptive-extender/issues"
	},
	"homepage": "https://github.com/eccs0103/adaptive-extender#readme",
	"scripts": {
		"build:core": "tsc -p ./src/core/tsconfig.json",
		"build:dom": "tsc -p ./src/dom/tsconfig.json",
		"build:node": "tsc -p ./src/node/tsconfig.json",
		"build": "npm run build:core && npm run build:dom && npm run build:node",

		"watch:core": "tsc -p ./src/core/tsconfig.json --watch",
		"watch:dom": "tsc -p ./src/dom/tsconfig.json --watch",
		"watch:node": "tsc -p ./src/node/tsconfig.json --watch",
		"watch": "npm run watch:core && npm run watch:dom && npm run watch:node"
	}
}
